@model HomeViewModel
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Enjoy the latest music from your favorite artist</h1>
    <div class="row" style="margin-top: 50px">
        <h2>Featured albums</h2>
    </div>
    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <img class="card-img-top" src="@Model.Featured[0].AlbumArt" alt="Card image cap">
                <div class="card-body">
                    <h2 class="card-title">@Model.Featured[0].Artist - @Model.Featured[0].Name</h2>
                    <a href="#" class="btn btn-primary">Buy $@Model.Featured[0].Price</a>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="row">
                @for (int i = 1; i < 5; i++)
                {
                    <div class="col-md-6">
                        <div class="card" style="width: 18rem;">
                            <img class="card-img-top" src="@Model.Featured[i].AlbumArt" alt="@Model.Featured[i].Name">
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>

    <partial name="_UserSuggestionsPartial" model="@Model.Suggestions" />
</div>
